/**
 * Write your model definitions here
 */

namespace org.med.chain

asset PatientProfile identified by profileId {
  o String profileId
  --> Patient patient
  o String firstName
  o String lastName
  o String EmailAddress
  o Integer Dob
  o Address address
}

asset DoctorProfile identified by profileId{
    o String profileId
    --> Doctor doctor
    o String firstName
    o String lastName
    o String EmailAddress
    o Integer Dob
    o String[] Qualifications
    o String ImageURL
    o Address address
}   

asset Patient identified by patientId {
participant  o String patientId
  o String[] authorized
  o String gender
  o String age
}

participant Doctor identified by doctorId {
  o String doctorId
}

asset MedicalRecord identified by recordId {
  o String recordId
  o String patientId
  o String doctorId
  o Integer version
  o String[] authorized
  o String description
  o String prescription
  o DateTime encounterTime
  o String location
}

asset Encounter identified by encounterId{
  o String encounterId
}
transaction UpdateRecord {
  o String recordId
  o String patientId
  o String doctorId
  o Integer version
  o String[] authorized
  o String description
  o String prescription
  o DateTime encounterTime
	o String location
}

concept Address {
  o String number
  o String street
  o String city
  o String country
  o String PinCode
}

transaction AllowOtherDoctorsRead {
  o String id
  --> MedicalRecord record
  --> Doctor doctor2
}

transaction AllowDoctorWrite {
  --> Patient patient
  o String doctorId
}
